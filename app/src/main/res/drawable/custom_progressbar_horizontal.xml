<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<solid android:color="@color/background_bar" />
			<corners android:radius="20dp" />
		</shape>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<layer-list>
				<item>
					<color android:color="@color/background_bar" />
				</item>
				<item
					android:left="1dp">
					<shape>
						<solid android:color="@color/refill_bar" />
						<corners android:radius="20dp" />
					</shape>
				</item>
			</layer-list>
		</clip>
	</item>
</layer-list>